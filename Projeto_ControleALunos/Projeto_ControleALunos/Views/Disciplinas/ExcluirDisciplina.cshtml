@model DisciplinasModel

@{
    ViewData["Title"] = "ExcluirDisciplinaPorID";
}

<div class="row justify-content-center mt-5">
    <div class="col-9">
        <h1 class="text-center"> Excluir Discipla !!!</h1>
        <h2 class="text-center mt-4">Deseja excluir Essa Disciplina?</h2>
        <h3 class="text-center mt-5">@Model.Nome @Model.Discricao</h3>
    </div>
</div>
<div class="row justify-content-center mt-5">
    <div class="d-grid gap-2">
        <a asp-controller="Disciplinas" asp-action="Excluir" asp-route-id="@Model.Id" class="btn btn-danger" type="button">Excluir</a>
        <a asp-controller="Disciplinas" asp-action="Index" class="btn btn-success" type="button">Voltar</a>
    </div>
</div>
