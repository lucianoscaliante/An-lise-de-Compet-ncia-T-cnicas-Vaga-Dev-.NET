@{
}
<div class="text-center">
    <h1 class="display-4">Matricular Aluno</h1>
</div>
<div class="row justify-content-center mt-5">
    <div class="col-6">
        <form asp-controller="Home" asp-action="SalvarAlunoMatricula" method="post">
            <div class="form-group">
                <label for="nome">Nome do Aluno</label>
                <input type="text" asp-for="Alunos.Nome" class="form-control" placeholder="Digite o nome do aluno">
            </div>
            <div class="form-group">
                <label for="Descricao">Descrição da Matéria</label>
                <input type="email" asp-for="Alunos.Email" class="form-control" placeholder="Digite o e-mail do aluno">
            </div>
            <div class="from-group mt-3">
                @foreach (var item in Model.Disciplinas)
                {
                    <ul class="list-group">
                        <li class="list-group-item mt-2">
                            <input class="form-check-input me-1" type="checkbox" value="" for="@item.Id">
                            <label class="form-check-label" for="@item.Id">@item.Nome   -   @item.Discricao</label>
                        </li>
                    </ul>
                }
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-end mt-3">
                <button class="btn btn-success me-md-2" type="submit">Salvar</button>
                <a class="btn btn-warning ml-1" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>